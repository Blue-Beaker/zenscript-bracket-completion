{
  "name": "zsbc",
  "displayName": "ZenScript Bracket Completion",
  "description": "ZenScript bracket handlers completion, using data dumped from a custom crafttweaker script.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:properties",
    "onLanguage:toml",
    "onLanguage:json",
    "onLanguage:mcfunction",
    "onLanguage:zenscript",
    "onLanguage:javascript",
    "onLanguage:typescript"],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "ZenScript Bracket Completion",
      "order": 21,
      "properties": {
        "zsbc.alwaysReload": {
          "type": "boolean",
          "markdownDescription": "Always reload from crafttweaker.log when extension starts. If set to false you need to reload manually.",
          "default":"true",
          "scope": "window"
        },
        "zsbc.onlyCompleteBrackets": {
          "type": "boolean",
          "markdownDescription": "Only trigger completion in brackethandler brackets.",
          "default":"true",
          "scope": "window"
        },
        "zsbc.path": {
          "type": "string",
          "markdownDescription": "Path to your crafttweaker.log",
          "scope": "window"
        },
        "zsbc.ctapi": {
          "type": "string",
          "default":"mc1.12.x",
          "enum": ["mc1.12.x"],
          "markdownDescription": "Crafttweaker version.",
          "scope": "window"
        }
      }
    },
    "capabilities" : {
      "hoverProvider" : "true"
    },
    "commands": [
			{
				"command": "zsbc.reload",
				"title": "Reload data from CraftTweaker",
        "category": "ZenScript Bracket Completion"
			}
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blue-Beaker/zenscript-bracket-completion"
  }
}
